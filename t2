
defCanvasWidth=1200;
defCanvasHeight=700;

var mydata1 =   [
    {
   		value : CPU_FREE, 
		color: "rgba(175,175,175,1)",
		title : "CPU Idle: " + CPU_FREE
   	},
  	{
  		value : CPU_USED, 
		color: "rgba(255,34,34,1)",
		title : "CPU Used: " + CPU_USED
  	 }
];

var mydata2 =   [
    {
   		value : MEM_FREE, 
		color: "rgba(175,175,175,1)",
